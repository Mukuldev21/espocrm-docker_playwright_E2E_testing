{
  "name": "espocrm-docker",
  "version": "1.0.0",
  "description": "This project involves running EspoCRM locally using Docker and performing extensive automated testing using Playwright with TypeScript.",
  "main": "index.js",
  "scripts": {
    "test": "npm run bdd",
    "bdd": "node scripts/run-bdd.js",
    "test:auth": "playwright test --project=\"Login Tests\"",
    "test:functional": "playwright test --project=\"EspoCRM E2E Tests\"",
    "generate-data": "playwright test --project=\"Data Generation\"",
    "report": "allure generate allure-results -o allure-report --clean && node scripts/customize-theme.js && allure open allure-report"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Mukuldev21/espocrm-docker_playwright_E2E_testing.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/Mukuldev21/espocrm-docker_playwright_E2E_testing/issues"
  },
  "homepage": "https://github.com/Mukuldev21/espocrm-docker_playwright_E2E_testing#readme",
  "devDependencies": {
    "@cucumber/cucumber": "^12.2.0",
    "@playwright/test": "^1.57.0",
    "@types/node": "^24.10.1",
    "allure-commandline": "^2.34.1",
    "allure-playwright": "^3.4.2",
    "playwright-bdd": "^8.4.2"
  }
}